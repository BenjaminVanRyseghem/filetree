
!MCFileTreeReader methodsFor: 'utilities' stamp: 'revelations 11/2/2011 13:57'!
loadDefinitions
	| entries |
	definitions := OrderedCollection new.
	entries := packageDirectory entries.
	[ 
	self
		addDefinitionFromFile: (entries detect: [ :entry | entry name = 'categories' ] ifNone: [  ])
			inDirectory: packageDirectory;
		addClassAndMethodDefinitionsFromDirectoryEntries: entries;
		addDefinitionFromFile: (entries detect: [ :entry | entry name = 'initializers' ] ifNone: [  ])
			inDirectory: packageDirectory ] on: Error do: [ :error | error halt ]! !
